<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts visibility="all"}}

<article class="{{post_class}}">
	<div class="inner">
		<div class="box post-box">
			{{#if featured}}
				<span class="post-feature">
					<i class="icon icon-star">{{> "icons/icon-star"}}</i>
				</span>
			{{/if}}
			<!-- Display the title only if it exists and is not "Untitled" -->
		        {{#if title}}
		            {{#unless (match title "^Untitled$")}}
		                <h3 class="gh-card-title is-title">{{title}}</h3>
		            {{/unless}}
		        {{/if}}
			<span class="post-meta">
				{{t "By"}}
				{{authors separator=", "}}
				{{#primary_tag}}{{t "in"}} <a class="post-meta-tag" href="{{url}}">{{name}}</a>{{/primary_tag}}
				{{t "on"}}
				<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
			</span>
			<div class="post-content">
			  {{{content}}}
			</div>
		</div>
	</div>
</article>

{{/foreach}}

{{pagination}}
